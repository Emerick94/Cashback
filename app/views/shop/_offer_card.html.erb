
<div class="col-lg-4 col-md-6 mb-4">
  <div class="card h-100">
    <% if offer.premium %>
      <div class="card-header">
        Premium!
      </div>
    <% end %>

    <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
    <div class="card-body">
      <h4 class="card-title">
        <%= link_to offer.advertiser_name, click_path(offer.id), target: :_blank %>
      </h4>

      <p class="card-text"><%= offer.description %></p>
    </div>
    <% if offer.users.count > 1 %>
    <div class="card-footer">
      <small class="text-muted"> <%= "Users interested: #{offer.users.count}"%> </small>
    </div>
    <% end %>
  </div>
</div>

